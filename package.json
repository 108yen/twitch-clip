{
  "name": "twitch-clip",
  "version": "2.11.5",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  },
  "scripts": {
    "prepare": "lefthook install",
    "dev": "concurrently \"pnpm firestore:emulators\" \"pnpm next dev\"",
    "firestore:emulators": "firebase emulators:start --project=twitch-clip-66e5b --only firestore --import data/2025-03-22",
    "firestore:emulators-export": "firebase emulators:export --project=twitch-clip-66e5b",
    "scan": "pnpm dlx react-scan@0.0.47 localhost:3000",
    "build": "next build",
    "postbuild": "next-sitemap",
    "prebuild": "pnpm gen:streamer",
    "start": "next start",
    "lint": "eslint . --max-warnings=0 --cache",
    "lint:inspect": "pnpm dlx @eslint/config-inspector",
    "format": "prettier --write .",
    "format:check": "prettier --check --cache .",
    "format:write": "prettier --write --cache .",
    "typecheck": "tsc --noEmit",
    "spellcheck": "cspell \"**/*.{js,jsx,mjs,ts,tsx,mts,md,mdx}\" --quiet",
    "gen:streamer": "tsx src/scripts/gen-streamer",
    "update:teams": "tsx src/scripts/update-teams",
    "update:clips-teams": "tsx src/scripts/update-clips-teams",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "cleanup": "pnpx rimraf .next node_modules .turbo dist coverage .eslintcache .playwright pnpm-lock.yaml"
  },
  "dependencies": {
    "@conform-to/react": "^1.2.2",
    "@conform-to/zod": "^1.8.2",
    "@sentry/nextjs": "^10.0.0",
    "@yamada-ui/carousel": "^2.1.10",
    "@yamada-ui/lucide": "^1.10.3",
    "@yamada-ui/react": "^1.7.4",
    "@yamada-ui/table": "^1.3.11",
    "find-packages": "^10.0.4",
    "firebase": "^12.0.0",
    "firebase-admin": "^13.0.0",
    "next": "15.5.7",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.0.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "remark-gfm": "^4.0.0",
    "server-only": "^0.0.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@clack/prompts": "^0.11.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/eslint-plugin": "^9.0.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.0",
    "@next/eslint-plugin-next": "15.5.6",
    "@octokit/plugin-throttling": "^11.0.0",
    "@playwright/test": "^1.51.1",
    "@types/gtag.js": "^0.0.20",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/utils": "^8.33.1",
    "axios": "^1.8.1",
    "concurrently": "^9.1.0",
    "cspell": "^9.0.0",
    "dotenv": "^17.0.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^6.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-typegen": "^2.2.0",
    "firebase-tools": "^14.0.0",
    "globals": "^16.0.0",
    "lefthook": "^2.0.0",
    "prettier": "^3.0.3",
    "svelte-eslint-parser": "^1.0.0",
    "tsx": "^4.19.2",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.0.1"
  }
}
